<config-schema xmlns="urn:wildfly:pm-config-schema:1.0">

  <feature-spec name="domain" root="true">
    <feature spec="system-properties" required="false"/>
    <feature spec="management"/>
    <feature spec="profiles"/>
    <feature spec="interfaces"/>
    <feature spec="socket-binding-groups"/>
    <feature spec="server-groups"/>
  </feature-spec>

  <feature-spec name="system-properties">
    <feature spec="system-property" required="false" unbounded="true" spot="system-property"/>
  </feature-spec>
  <feature-spec name="system-property">
    <parameters>
      <parameter name="name"/>
      <parameter name="value"/>
    </parameters>
  </feature-spec>

  <feature-spec name="management">
    <feature spec="access-control" required="false" spot="access-control"/>
  </feature-spec>
  <feature-spec name="access-control"/>

  <feature-spec name="profiles">
    <feature spec="profile" required="true" unbounded="true" spot="profile"/>
  </feature-spec>
  <feature-spec name="profile">
    <parameters>
      <parameter name="name" feature-id="true"/>
    </parameters>
    <feature spec="subsystem" required="true" unbounded="true"/>
  </feature-spec>
  <feature-spec name="subsystem"/>

  <feature-spec name="interfaces">
    <feature spec="interface" required="true" unbounded="true" spot="interface"/>
  </feature-spec>
  <feature-spec name="interface">
    <parameters>
      <parameter name="name" feature-id="true"/>
    </parameters>
  </feature-spec>

  <feature-spec name="socket-binding-groups">
    <feature spec="socket-binding-group" required="true" unbounded="true" spot="socket-binding-group"/>
  </feature-spec>
  <feature-spec name="socket-binding-group">
    <parameters>
      <parameter name="name" feature-id="true"/>
      <parameter name="default-interface" spot-ref="interface"/>
    </parameters>
    <feature spec="socket-binding" required="true" unbounded="true" spot="socket-binding"/>
  </feature-spec>
  <feature-spec name="socket-binding">
    <parameters>
      <parameter name="socket-binding-group" parent-ref="socket-binding-group" />
      <parameter name="name"/>
      <parameter name="port"/>
    </parameters>
  </feature-spec>

  <feature-spec name="server-groups">
    <feature spec="server-group" required="true" unbounded="true" spot="server-group"/>
  </feature-spec>
  <feature-spec name="server-group">
    <parameters>
      <parameter name="name" feature-id="true"/>
      <parameter name="profile" spot-ref="profile"/>
      <parameter spot-ref="socket-binding-group"/>
    </parameters>
  </feature-spec>
</config-schema>