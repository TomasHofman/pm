<xs:schema xmlns="urn:wildfly:pm-provisioning:1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
  attributeFormDefault="unqualified" elementFormDefault="qualified" targetNamespace="urn:wildfly:pm-provisioning:1.0"
  version="2.0">

  <xs:element name="installation" type="installationType" />

  <xs:complexType name="installationType">
    <xs:annotation>
      <xs:documentation>
        TODO: what is installation
      </xs:documentation>
    </xs:annotation>
    <xs:choice maxOccurs="unbounded" minOccurs="1">
      <xs:element name="feature-pack" type="feature-packType" />
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="feature-packType">
    <xs:annotation>
      <xs:documentation>
        TODO: what is feature-pack
      </xs:documentation>
    </xs:annotation>
    <xs:choice maxOccurs="1" minOccurs="0">
      <xs:element name="excludes" type="excludesType" />
      <xs:element name="includes" type="includesType" />
    </xs:choice>
    <xs:attribute name="groupId" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          TODO: what is feature-pack/@groupId
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="artifactId" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          TODO: what is feature-pack/@artifactId
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="version" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          TODO: what is feature-pack/@version
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>
  
  <xs:complexType name="excludesType">
    <xs:annotation>
      <xs:documentation>
        Describes excluded content from the provisioned feature-pack
      </xs:documentation>
    </xs:annotation>
    <xs:complexContent>
      <xs:extension base="packageListType"/>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="includesType">
    <xs:annotation>
      <xs:documentation>
        Describes excluded content from the provisioned feature-pack
      </xs:documentation>
    </xs:annotation>
    <xs:complexContent>
      <xs:extension base="packageListType"/>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="packageListType">
    <xs:annotation>
      <xs:documentation>
        Lists packages
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="package" type="packageType" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="packageType">
    <xs:annotation>
      <xs:documentation>
        Names a package
      </xs:documentation>
    </xs:annotation>
    <xs:attribute name="name" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          Package name
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>
</xs:schema>